<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 自定义星星属性 -->
    <declare-styleable name="Star">
    <attr format="integer" name="starsNum" />
    <attr format="dimension" name="starWidth" />
    <attr format="dimension" name="starHeight" />
    <attr format="dimension" name="starDistance" />
    <attr format="reference" name="starBackground" />
    <attr format="reference" name="starDrawBackground" />
    <attr format="boolean" name="starClickable" />
    <attr format="boolean" name="isStatic" />
    </declare-styleable>

    <declare-styleable name="AddressWheelView">
        <attr name="gravity">
            <enum name="center" value="17"/>
            <enum name="left" value="3"/>
            <enum name="right" value="5"/>
        </attr>
        <attr name="textSize" format="dimension"/>
        <attr name="textColorOut" format="color"/>
        <attr name="textColorCenter" format="color"/>
        <attr name="dividerColor" format="color"/>
        <attr name="lineSpacingMultiplier" format="float"/>
        <attr name="isLoop" format="boolean"/>
        <attr name="initPosition" format="integer"/>
        <attr name="visibleItemCount" format="integer"/>
        <attr name="centerBackground" format="color"/>
    </declare-styleable>

    <declare-styleable name="MyDropSelectView">
        <attr name="drop_title" format="string" />
        <attr name="drop_icon" format="reference" />
        <attr name="drop_title_changed_color" format="color" />
        <attr name="drop_title_origin_color" format="color" />
        <attr name="drop_item_selected_background_color" format="color" />
        <attr name="drop_title_onclick_color" format="color" />
    </declare-styleable>

    <declare-styleable name="StickyScrollView">
        <attr name="stuckShadowHeight" format="dimension" />
        <attr name="stuckShadowDrawable" format="reference" />
    </declare-styleable>


        <declare-styleable name="MarqueeView"><attr format="enum" name="marqueeview_repet_type">
            <enum name="repet_oncetime" value="0"/>
            <enum name="repet_interval" value="1"/>
            <enum name="repet_continuous" value="2"/>
        </attr><attr format="integer" name="marqueeview_text_distance"/><attr format="float" name="marqueeview_text_startlocationdistance"/><attr format="float" name="marqueeview_text_speed"/><attr format="color|reference" name="marqueeview_text_color"/><attr format="float" name="marqueeview_text_size"/><attr format="boolean" name="marqueeview_isclickalbe_stop"/><attr format="boolean" name="marqueeview_is_resetLocation"/></declare-styleable>
</resources>